{% extends "layout.stencil" %}

{% block pageBody %}

<form action="new" method="post">
  <textarea name="body">{{ paste.raw|default:"" }}</textarea>
  <select name="mode">
    {% for mode in modes %}
    <option value="{{ modes.sysname }}"{% if paste.mode == mode.sysname %} selected="selected"{% endif %}>{{ mode.name }}</option>
    {% endfor %}
  </select>
  <input type="submit" />
</form>


{% endblock %}